<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Movies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">MovieApp</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/movies/new">Add New Movie</a>
                </li>
            </ul>
        </div>
    </nav>
    <header class="container text-center py-5">
        <h1 class="display-4">All Movies</h1>
        <p class="lead">Discover our collection of movies.</p>
    </header>
    <div class="container">
        <ul class="list-group">
            <% movies.forEach(movie => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-light">
                    <a href="/movies/<%= movie.id %>" class="text-light"><%= movie.title %></a>
                    <form action="/movies/<%= movie.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <footer class="text-center mt-5 py-3">
        <p>&copy; 2023 MovieApp. All rights reserved.</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
